{
  "compilerOptions": {
    "target": "esnext",

    "outDir": "./dist",
    "rootDir": "./src",

    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "allowJs": false,
    "declaration": true,
    "removeComments": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}